{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<main class="form-signin">
  <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <img class="mb-4" src="{{ asset('img/bootstrap-logo.svg') }}" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Connexion</h1>

    <div class="mb-3">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" value="{{ last_username }}" name="email" class="form-control" id="inputEmail" placeholder="name@example.com" autocomplete="email" required autofocus>
    </div>

    <div class="mb-3">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
  </form>
</main>

{% endblock %}
