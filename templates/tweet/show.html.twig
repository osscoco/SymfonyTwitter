{% extends 'base.html.twig' %}

{% block title %}Tweet{% endblock %}

{% block body %}
    <h1>Tweet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tweet.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ tweet.label }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ tweet.likes }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ tweet.dateCreation ? tweet.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modification</th>
                <td>{{ tweet.dateModification ? tweet.dateModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tweet_index') }}">back to list</a>

    <a href="{{ path('app_tweet_edit', {'id': tweet.id}) }}">edit</a>

    {{ include('tweet/_delete_form.html.twig') }}
{% endblock %}
